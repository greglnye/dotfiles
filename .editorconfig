# EditorConfig : https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# and sets default charset and trims trailing whitespace
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# 2 space indentation
[*.{bash,c,h,cpp,hpp,css,sass,scss,sh,go,htm,html,xhtml,ts,js,json,lua}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{cs,java,ps1,psd1,psm1,py}]
indent_style = space
indent_size = 4
